name: NodeJS with Webpack
permissions: write-all

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3
    - name: Use Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '20.19.6'
        registry-url: 'https://registry.npmjs.org'

    - uses: volta-cli/action@v4
    - name: Install
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 10
        max_attempts: 3
        command: npm ci

    - name: Versions
      run: |
        node --version
        npm --version
        
    - name: Lint
      run: npm run lint

    - name: Build
      run: npm run build:all

    - name: Test Jest
      run: npm run test:jest

    - name: Archive jest code coverage results
      uses: actions/upload-artifact@v4
      with:
        name: code-coverage-report
        path: ./reports/coverage-jest/lcov-report/

    - name: Test Cy passes
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 3
        max_attempts: 2
        command: npm run test:jest:cy:passes

    - name: Test Cy V2 Videos
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 3
        max_attempts: 2
        command: npm run test:jest:cy:v2attachments

    - name: Test Cy V2 Suites
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 3
        max_attempts: 2
        command: npm run test:jest:cy:v2suites

    - name: Test Cy failures
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 6
        max_attempts: 2
        command: npm run test:jest:cy:failures

    - name: Test Cy requests
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 6
        max_attempts: 2
        command: npm run test:jest:cy:requests

    - name: Test Cy attachments
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 4
        max_attempts: 2
        command: npm run test:jest:cy:attachments

    - name: Test Cy hooks
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 6
        max_attempts: 2
        command: npm run test:jest:cy:hooks

    - name: Publish
      if: success() || failure()
      env:
        NODE_AUTH_TOKEN: ${{ secrets.NPM_TOKEN }}
      run: |
        branch=${{ github.ref }}
        echo "Branch: $branch" 
        
        gitmsg="${{ github.event.commits[0].message }}"
        echo "Commit: $gitmsg" 
        
        if [[ "$gitmsg" =~ "[patch]" ]]; then
          echo "publish patch"
          npm run publish:patch
          git push --tags
          exit 0
        fi 
        
        if [[ "$gitmsg" =~ "[fix]" ]]; then
          echo "publish patch"
          npm run publish:patch
          git push --tags
          exit 0
        fi
        
        if [[ "$gitmsg" =~ "[minor]" ]]; then
          echo "publish minor"
          npm run publish:minor
          git push --tags
          exit 0
        fi
        
        if [[ "$gitmsg" =~ "[major]" ]]; then
          echo "publish major"
          npm run publish:major
          git push --tags
          exit 0
        fi
        
        echo "publishing beta, for other commit message should contain [minor], [major] or [patch]/[fix]"
        npm run publish:beta || true
        # git push --tags || true

    - name: Test Cy commands
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 10
        max_attempts: 2
        command: npm run test:jest:cy:commands

    - name: Test Cy events
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 10
        max_attempts: 2
        command: npm run test:jest:cy:events

    - name: Test Cy cucumber
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 10
        max_attempts: 2
        command: npm run test:jest:cy:cucumber

    - name: Test Cy duration
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 10
        max_attempts: 2
        command: npm run test:jest:cy:duration

    - name: Test Cy interface Part1
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 10
        max_attempts: 2
        command: npm run test:jest:cy:interface:p1

    - name: Test Cy interface Part2
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 10
        max_attempts: 2
        command: npm run test:jest:cy:interface:p2

    - name: Test Cy only
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 10
        max_attempts: 2
        command: npm run test:jest:cy:only

    - name: Test Cy other
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 10
        max_attempts: 4
        command: npm run test:jest:cy:other

    - name: Test Cy regression
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 10
        max_attempts: 2
        command: npm run test:jest:cy:regression


    - name: Test Cy settings
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 10
        max_attempts: 2
        command: npm run test:jest:cy:settings

    - name: Test Cy skips
      uses: nick-fields/retry@v2
      with:
        timeout_minutes: 10
        max_attempts: 2
        command: npm run test:jest:cy:skips
        

    - name: Merge Cov
      run: npm run cov:merge

#    - name: Archive code coverage results
#      uses: actions/upload-artifact@v4
#      with:
#        name: code-coverage-report
#        path: ./reports/coverage-full-total/lcov-report/

    - name: Monitor coverage
      continue-on-error: true
      uses: danhunsaker/clover-reporter-action@v0.2.17-clover
      with:
        github-token: ${{ secrets.GITHUB_TOKEN }}
        clover-file: ./reports/coverage-full-total/clover.xml

    - name: Publish Jest Test Report
      uses: mikepenz/action-junit-report@v3
      if: success() || failure() # always run even if the previous step fails
      with:
        report_paths: '**/reports/jest/*.xml'
        check_name: 'Jest Test Report'
        detailed_summary: true

