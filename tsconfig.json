{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "cypress"],
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "@src": ["./index.ts"],
      "@src/*": ["./*"]
    }
  },

  "include": ["src", "node_modules/jest-test-each/dist/index.d.ts"]
}
